<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gestionar_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/fondo_color"
    android:visibility="invisible"
    tools:context=".NavegacionMenu"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_navegacion_menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Linear_gestionar_usuario"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_weight="@android:integer/config_longAnimTime"

                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/fondo_color"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/recicladorG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:background="@color/colorBlanco"
                android:id="@+id/linea_gestionar_uno"
                >

            </View>

            <Button
                android:id="@+id/button_reg_user"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ic_launcher_background"
                android:onClick="registrarUsuario"
                android:text="@string/GestUsu_reg"
                android:textColor="@color/colorBlanco"
                android:textSize="24sp" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:background="@color/colorBlanco"
                android:id="@+id/linea_gestionar_dos"
                >

            </View>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>